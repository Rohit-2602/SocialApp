<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.SocialApp.TextInputLayout.HintText
        </item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@null</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextAppearance.SocialApp.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="GoogleButton" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ManageConnectionBTN" parent="ThemeOverlay.AppCompat">
        <item name="colorSecondary">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blue</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="RemoveConnection" parent="ThemeOverlay.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:drawableStart">@drawable/ic_remove_connection</item>
        <item name="elevation">0dp</item>
    </style>
</resources>